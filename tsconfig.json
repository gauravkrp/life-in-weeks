{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".", // This allows using relative paths from the root directory
		"paths": {
			"@/*": ["src/*"], // This maps "@/..." to "src/..."
			"components/*": ["src/components/*"], // This maps "components/..." to "src/components/..."
			"lib/*": ["src/lib/*"] // This maps "components/..." to "src/components/..."
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
